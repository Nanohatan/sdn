 <%- include('./header', {role:role}) %>
 <h3><%= className %></h3>
    <div class="row">
        <h3>第<%= videoNumber %></h3><h4><%= videoNumber %> <%= videoTitle %></h4>
        <div class="col-md-6 border" style="height: 500px; border-style: dotted; ">
