        <div class="col-md-6 pre-scrollable" style="height: 500px; border-style: dotted; "> 
            <% jsonAry.forEach(function(json) { %>
                <div class="col-md-6 border" style="height: 100px; width: 100%; margin-top: 10px; border-style: dotted; ">
                    <%= json.msg %>
                    <div onclick="favo(this,'<%= json._id %>')"><span class="glyphicon glyphicon-thumbs-up"> <%= json.likes %></span></div> 
                </div>
            <% }); %>

        </div>
    </div>

    <script>
      function favo(element,id){
        fetch("/api/likes/"+id)
          .then((response) => response.json())
          .then((data) => {
            if (isInc){
              var n = element.getElementsByTagName("span")[0].innerHTML;
              n++;
              element.getElementsByTagName("span")[0].innerHTML=n;
            }
          });
      }
    </script>
